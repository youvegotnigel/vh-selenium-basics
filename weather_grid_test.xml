<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Grid Test Suite">

    <test thread-count="3" name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <parameter name="url" value="https://www.google.com"/>
        <classes>
            <class name="com.vh.auto.team.basics.testng.WeatherGridTest">
                <methods>
                    <include name="weather_test"/>
                </methods>
            </class>
        </classes>
    </test>

    <test thread-count="3" name="Microsoft Edge Test">
        <parameter name="browser" value="MicrosoftEdge"/>
        <parameter name="url" value="https://www.google.com"/>
        <classes>
            <class name="com.vh.auto.team.basics.testng.WeatherGridTest">
                <methods>
                    <include name="weather_test"/>
                </methods>
            </class>
        </classes>
    </test>

    <test thread-count="3" name="FireFox Test">
        <parameter name="browser" value="firefox"/>
        <parameter name="url" value="https://www.google.com"/>
        <classes>
            <class name="com.vh.auto.team.basics.testng.WeatherGridTest">
                <methods>
                    <include name="weather_test"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>